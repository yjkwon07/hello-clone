{
  "compilerOptions": {
    "esModuleInterop": true, // ES6 모듈 사양을 준수하여 CommonJS 모듈을 가져올 수 있게 된다.
    "module": "esnext", // 모듈 선택
    "moduleResolution": "Node", // 모듈 해석하는 순서
    "resolveJsonModule": true, // import json ok
    "target": "es5", // 컴파일 후 빌드된 JS 버전
    "lib": ["ES2020","DOM"],
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": { // 절대경로 설정
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
      "@API/*": ["API/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@typings/*": ["typings/*"]
    }
  }
}